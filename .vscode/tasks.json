{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run typedoc",
            "type": "shell",
            "command": "grunt docs",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Initialize Environment",
            "type": "shell",
            "options": {
                "cwd": "documentation"
            },
            "command": "npm install --safe-dev",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}